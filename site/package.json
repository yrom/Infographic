{
  "name": "@antv/infographic-site",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "dev": "run-p dev:next dev:watch-content",
    "dev:next": "next dev",
    "dev:watch-content": "node scripts/watch-content.js",
    "build": "next build && npm run generate:llms",
    "build:static": "next build",
    "generate:llms": "node scripts/generate-llms.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format:source": "node ../node_modules/prettier/bin/prettier.cjs --config .prettierrc --plugin-search-dir .. --write \"{plugins,src}/**/*.{js,ts,jsx,tsx,css}\"",
    "nit:source": "node ../node_modules/prettier/bin/prettier.cjs --config .prettierrc --plugin-search-dir .. --list-different \"{plugins,src}/**/*.{js,ts,jsx,tsx,css}\"",
    "prettier": "npm run format:source",
    "prettier:diff": "npm run nit:source",
    "lint-heading-ids": "node scripts/headingIdLinter.js",
    "fix-headings": "node scripts/headingIdLinter.js --fix",
    "ci-check": "npm-run-all prettier:diff --parallel lint tsc lint-heading-ids deadlinks",
    "tsc": "tsc --noEmit",
    "start": "next start",
    "check-all": "npm-run-all prettier lint:fix tsc",
    "deadlinks": "node scripts/deadLinkChecker.js"
  },
  "dependencies": {
    "@antv/infographic": "file:../",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/state": "^6.5.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.7",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@types/pako": "^2.0.4",
    "antd": "^5.24.7",
    "body-scroll-lock": "^3.1.3",
    "classnames": "^2.2.6",
    "debounce": "^1.2.1",
    "framer-motion": "^12.23.24",
    "github-slugger": "^1.3.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.554.0",
    "next": "^15.5.7",
    "next-remote-watch": "^1.0.0",
    "pako": "^2.1.0",
    "parse-numeric-range": "^1.2.0",
    "react": "^19.0.0",
    "react-collapsed": "4.2.0",
    "react-dom": "^19.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@mdx-js/mdx": "^2.1.3",
    "@types/body-scroll-lock": "^2.6.1",
    "@types/classnames": "^2.2.10",
    "@types/debounce": "^1.2.1",
    "@types/github-slugger": "^1.3.0",
    "@types/node": "^14.6.4",
    "@types/parse-numeric-range": "^0.0.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "autoprefixer": "^10.4.20",
    "babel-plugin-react-compiler": "19.0.0-beta-63e3235-20250105",
    "chalk": "4.1.2",
    "chokidar": "^4.0.3",
    "eslint": "7.x",
    "eslint-config-next": "12.0.3",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-compiler": "^19.0.0-beta-e552027-20250112",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globby": "^11.0.1",
    "gray-matter": "^4.0.2",
    "husky": "^7.0.4",
    "lint-staged": ">=10",
    "mdast-util-to-string": "^1.1.0",
    "metro-cache": "0.72.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.4.0",
    "rehype-stringify": "^9.0.4",
    "remark": "^15.0.1",
    "remark-external-links": "^7.0.0",
    "remark-images": "^2.0.0",
    "remark-rehype": "^10.1.0",
    "remark-slug": "^7.0.0",
    "remark-unwrap-images": "^2.0.0",
    "retext": "^7.0.1",
    "retext-smartypants": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2",
    "unist-util-visit": "^2.0.3",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "engines": {
    "node": ">=16.8.0"
  },
  "nextBundleAnalysis": {
    "budget": null,
    "budgetPercentIncreaseRed": 10,
    "showDetails": true
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css}": "npm run prettier",
    "src/**/*.md": "npm run fix-headings"
  },
  "repository": "git@github.com:antvis/Infographic.git"
}
